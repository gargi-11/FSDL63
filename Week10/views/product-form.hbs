<div class="card">
    <div class="card-header">
        <h2>{{#if isEdit}}Edit{{else}}Add New{{/if}} Product</h2>
    </div>
    <div class="card-body">
        <form action="{{#if isEdit}}/products/{{product._id}}?_method=PUT{{else}}/products{{/if}}" method="POST">
            <div class="form-group">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name" value="{{product.name}}" required>
            </div>
            
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" required>{{product.description}}</textarea>
            </div>
            
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" step="0.01" min="0" value="{{product.price}}" required>
            </div>
            
            <div class="form-group">
                <label for="category">Category:</label>
                <select id="category" name="category" required>
                    <option value="" {{#unless product.category}}selected{{/unless}}>-- Select Category --</option>
                    <option value="Electronics" {{#if_eq product.category "Electronics"}}selected{{/if_eq}}>Electronics</option>
                    <option value="Clothing" {{#if_eq product.category "Clothing"}}selected{{/if_eq}}>Clothing</option>
                    <option value="Food" {{#if_eq product.category "Food"}}selected{{/if_eq}}>Food</option>
                    <option value="Books" {{#if_eq product.category "Books"}}selected{{/if_eq}}>Books</option>
                    <option value="Other" {{#if_eq product.category "Other"}}selected{{/if_eq}}>Other</option>
                </select>
            </div>
            
            <div class="form-group">
                <div class="checkbox-group">
                    <input type="checkbox" id="inStock" name="inStock" {{#if product.inStock}}checked{{/if}}>
                    <label for="inStock">In Stock</label>
                </div>
            </div>
            
            <div class="form-group">
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" min="0" value="{{product.quantity}}" {{#unless product.inStock}}disabled{{/unless}}>
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-primary">{{#if isEdit}}Update{{else}}Add{{/if}} Product</button>
                <a href="/products" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>